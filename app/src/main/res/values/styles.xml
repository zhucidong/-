<resources>


<style name="motify_text">
    <item name="android:gravity">center</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">14sp</item>
</style>


<style name="motify_edit">
    <item name="android:gravity">center</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textUri|textMultiLine</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:maxLength">1</item>
    <item name="android:digits">abcdefghijklmnopqrstwxyzABCDEFGHIJKLMNOPQRSTWXYZ</item>
    <item name="android:textSize">14sp</item>
    <item name="android:hint">请输入编码</item>
</style>

<style name="paster_style">
    <item name="android:layout_width">22dp</item>
    <item name="android:layout_height">22dp</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_weight">1</item>
</style>


<style name="dirc_style">
    <item name="android:layout_margin">3dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
</style>


<style name="disrupt_text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
    <item name="android:gravity">center|left</item>
    <item name="android:padding">5dp</item>

</style>
<style name="disrupt_edit">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
    <item name="android:gravity">center</item>
    <item name="android:maxLength">2</item>
    <item name="android:padding">5dp</item>
    <item name="android:inputType">number</item>
</style>

</resources>
